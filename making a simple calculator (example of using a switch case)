#include <iostream>
#include <math.h>
using namespace std;
int main(){
     int a;
     cout<<"Please enter the value of a : ";
     cin>>a;

     int b;
     cout<<"Please enter the value of b : ";
     cin>>b;

     char op;
     cout<<"Please enter the operation type : ";
     cin>>op;

     switch(op){
          case '+': cout<<a+b<<endl;
          break;

          case '-': cout<<a-b<<endl;
          break;

          case '*': cout<<a*b<<endl;
          break;

          case '/': cout<<a/b<<endl;
          break;
     }
}
