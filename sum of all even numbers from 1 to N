#include <iostream>
#include <math.h>
using namespace std;
int main(){
     int n;
    cout<< "Please enter your data" <<endl;
    cin>>n;
    int i=2;
    int sum=0;

    while (i<=n)
    {
      sum= sum+i;
      i=i+2;
    }
    cout<< "The Sum of all the even number between 1 and "<<n<< " is : " <<sum<< endl;
}
